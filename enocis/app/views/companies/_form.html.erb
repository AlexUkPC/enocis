    </div>    
    <div class="field">
      <%= form.label "Email pe care se primesc notificarile de testimoniale si formulare de contact noi" %>
      <%= form.text_field :email_notice_contact %>
    </div>
  </div>
</div>
  <div class="actions">
    <div class="form_btn">
      <%= link_to 'Inapoi', :back, data: { turbolinks: false } %>
    </div>
    <%= form.submit %>
  </div>
<% end %>
