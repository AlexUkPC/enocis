<%= form_with(model: company, class:"admin_company_form") do |form| %>
  
<div class="row">
  <div class="col-md-6">
    <div class="field">
      <%= form.label :address do %>
        <span class="label">Adresa</span> 
        <span class="info">
          <i class="fa fa-info-circle info-name"></i>
          <span class="hiddenimg">
            <%= image_tag 'info/detalii_contact_footer_adresa.jpg' %>
            <%= image_tag 'info/detalii_contact_adresa.jpg' %>
          </span>
        </span>
      <% end %>
      <%= form.text_field :address %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="field">
      <%= form.label "URL Google Maps" %>
      <%= form.text_field :url_google_maps %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-6">
        <div class="field">
          <%= form.label :phone do %>
            <span class="label">Telefon principal</span> 
            <span class="info">
              <i class="fa fa-info-circle info-name"></i>
              <span class="hiddenimg">
                <%= image_tag 'info/detalii_contact_footer_telefon_principal.jpg' %>
                <%= image_tag 'info/detalii_contact_telefon_principal.jpg' %>
              </span>
            </span>
          <% end %>
          <%= form.text_field :phone %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="field">
          <%= form.label :phone_name do %>
            <span class="label">Nume telefon principal</span> 
            <span class="info">
              <i class="fa fa-info-circle info-name"></i>
              <span class="hiddenimg">
                <%= image_tag 'info/detalii_contact_footer_nume_telefon_principal.jpg' %>
              </span>
            </span>
          <% end %>
          <%= form.text_field :phone_name %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="field">
          <%= form.label :phone2 do %>
            <span class="label">Telefon stanga</span> 
            <span class="info">
              <i class="fa fa-info-circle info-name"></i>
