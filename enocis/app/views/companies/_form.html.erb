                <%= image_tag 'info/detalii_contact_telefon_stanga.jpg' %>
              </span>
            </span>
          <% end %>
          <%= form.text_field :phone2 %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="field">
          <%= form.label :phone2_name do %>
            <span class="label">Nume telefon stanga</span> 
            <span class="info">
              <i class="fa fa-info-circle info-name"></i>
              <span class="hiddenimg">
                <%= image_tag 'info/detalii_contact_footer_nume_telefon_stanga.jpg' %>
              </span>
            </span>
          <% end %>
          <%= form.text_field :phone2_name %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="field">
          <%= form.label :phone3 do %>
            <span class="label">Telefon dreapta</span> 
            <span class="info">
              <i class="fa fa-info-circle info-name"></i>
