<%= form_with(model: product, class:"admin_product_form") do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xl-6 col-lg-12">
      <div class="row">
        <div class="col-lg-2">
          <%= form.label :name do %>
            <span class="label">Nume</span> 
            <span class="info">
              <i class="fa fa-info-circle info-name"></i>
              <span class="hiddenimg">
                <%= image_tag 'info/products_nume.PNG' %>
                <%= image_tag 'info/product_nume.PNG' %>
              </span>
            </span>
          <% end %>
        </div>
        <div class="col-lg-10">
          <%= form.text_field :name %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2">
          <%= form.label :price do %>
            <span class="label">Pret</span> 
            <span class="info">
              <i class="fa fa-info-circle info-name"></i>
              <span class="hiddenimg">
                <%= image_tag 'info/products_pret.PNG' %>
                <%= image_tag 'info/product_pret.PNG' %>
              </span>
            </span>
          <% end %>
        </div>
        <div class="col-lg-10">
          <%= form.text_field :price %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2">
          <%= form.label :dimensions do %>
            <span class="label">Dimensiuni</span> 
            <span class="info">
              <i class="fa fa-info-circle info-name"></i>
              <span class="hiddenimg">
                <%= image_tag 'info/product_dimensiuni.PNG' %>
              </span>
            </span>
          <% end %>
        </div>
        <div class="col-lg-10">
          <%= form.text_field :dimensions %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2">
          <%= form.label :material do %>
            <span class="label">Material</span> 
            <span class="info">
              <i class="fa fa-info-circle info-name"></i>
              <span class="hiddenimg">
                <%= image_tag 'info/product_material.PNG' %>
              </span>
            </span>
          <% end %>
        </div>
        <div class="col-lg-10">
          <%= form.text_field :material %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2">
          <%= form.label :accessories do %>
            <span class="label">Accesorii</span> 
            <span class="info">
              <i class="fa fa-info-circle info-name"></i>
              <span class="hiddenimg">
                <%= image_tag 'info/product_accesorii.PNG' %>
              </span>
            </span>
          <% end %>
        </div>
        <div class="col-lg-10">
          <%= form.text_field :accessories %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2">
           <%= form.label :color do %>
            <span class="label">Culoare</span> 
            <span class="info">
              <i class="fa fa-info-circle info-name"></i>
              <span class="hiddenimg">
                <%= image_tag 'info/product_culoare.PNG' %>
              </span>
            </span>
          <% end %>
        </div>
        <div class="col-lg-10">
          <%= form.text_field :color %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2">
          <%= form.label :product_category_id do %>
            <span class="label">Categorie</span> 
            <span class="info">
              <i class="fa fa-info-circle info-name"></i>
              <span class="hiddenimg">
                <%= image_tag 'info/product_categorie.PNG' %>
              </span>
            </span>
          <% end %>
        </div>
        <div class="col-lg-10">
          <%= form.select :product_category_id, ProductCategory.all.map {|c| [c.name, c.id]} %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2">
          <%= form.label :image do %>
            <span class="label">Poza</span> 
            <span class="info">
              <i class="fa fa-info-circle info-name"></i>
              <span class="hiddenimg">
                <%= image_tag 'info/products_poza.PNG' %>
                <%= image_tag 'info/product_poza.PNG' %>
              </span>
            </span>
          <% end %>
        </div>
        <div class="col-lg-10">
          <div class="row foto">
            <div id="upload" class="col-3 upload">
              <div class="form_btn">
                <%= form.label :image do %>
                  Incarca
                <% end %>
              </div>
              <%= form.file_field :image %>
            </div>
            <% if product.image.attached? %>
              <div id="poza" class="col-12 poza">
                 <%= image_tag product.image.variant(resize_to_limit: [400, 300]), id: "image" %>
              </div>
              <div id="checkbox" class="col-3 checkbox">
                <%= form.label :remove_image do %>
                  <%= form.check_box :remove_image, onclick:"document.querySelector('#poza').style.display = 'none';document.querySelector('#checkbox').style.display = 'none';" %> 
                  <div class="form_btn">
                    Sterge
                  </div>
                <% end %>
              </div>
            <% else %>
              <div id="poza" class="col-12 poza">
                <img src="" id="image" style="display: none;">   
              </div>
              
            <% end %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-2 col-sm-3 form_btn">
           <%= link_to 'Inapoi', products_path, data: { turbolinks: false } %>
        </div>
        <div class="col-lg-2 col-sm-3 form_btn">
          <%= form.submit %>
        </div>
        <% if !current_page?(new_product_path)  %>
          <div class="col-lg-2 col-sm-3 form_btn">
            <%= link_to 'Vezi', @product, data: { turbolinks: false } %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xl-6 col-lg-12">
    </div>
  </div>
<% end %>