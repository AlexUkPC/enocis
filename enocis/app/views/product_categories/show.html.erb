<p id="notice"><%= notice %></p>

<main role="main" class="product_category">
  <%= render '/layouts/parallax_container', image: if @product_category.cover_image.attached?; rails_blob_url(@product_category.cover_image); end  %> 

	<div class="container main_margin_top">
		<h1><%= @product_category.name %></h1>
		<div class="white_bg page_container">
      <% if @product_category.front_image.attached? %>
        <%= image_tag @product_category.front_image, alt: @product_category.name , class: 'main_img' %>
      <% end %>
		</div>
	</div>
  <div class="row">
    <%= render @product_category.products %>
  </div> 

	<div class="container">

		<div class="white_bg page_container">

			<div class="text_container">

				<h2><%= @product_category.title %></h2>
				<p><%= @product_category.description %></p>
  
        <h2>
          La orice comanda de <%= @product_category.name.downcase %> sunt incluse:
        </h2>

        <p>
          <span class="icon-tools" ></span> Design.<br>
          <span class="icon-tools-2" ></span> Montaj.<br>
          <span class="icon-bike" ></span> Transport.<br>
          <span class="icon-alarmclock" ></span> Revizuirea mobilierului semestrial/anual pe o perioada de 2 ani.<br>
          <span class="icon-gears" ></span> Ajustari post-montaj.
        </p>

        <h2>
          Servicii optionale pentru <%= @product_category.name.downcase %>:
        </h2>

        <p>
          <span class="icon-alarmclock" ></span> Revizuirea mobilierului semestrial/anual pe o perioada stabilita prin contract.<br>
            <span class="icon-flag" ></span> Relocare.<br>
        </p>
        <% if current_user %>
          <div class="container" style="margin-top: 20px">
            <div class="show_btn">
              <%= link_to 'Inapoi', :back, data: { turbolinks: false } %>
            </div>
            <div class="show_btn">
              <%= link_to 'Editeaza', edit_product_category_path(@product_category), data: { turbolinks: false } %> 
            </div>
          </div>
        <% end %>

        <%= render '/layouts/second_nav' %>

			</div>

		</div>
		
	</div>

</main>
