<%= render '/layouts/admin_panel' do %>
  <div class="admin_product_categories">
    <div class="admin_top">
      <h2>Categorii de produse</h2>
      <div class="admin_btn push"><%= link_to 'Adauga categorie produse', new_product_category_path %></div>
    </div>
    <hr>
    <table class="width50">
      <thead>
        <tr>
          <th class="five"></th>
          <th>Nume</th>
          <th>Titlu</th>
          <th class="ten">Vezi</th>
          <th class="ten">Edit</th>
          <th class="ten">Sterge</th>
        </tr>
      </thead>

      <tbody>
        <% @product_categories.each do |product_category| %>
          <tr>
            <td><%= product_category.id %></td>
            <td><%= product_category.name %></td>
            <td><%= excerpt(product_category.title, "", radius: 50) %></td>
            <td>
                <%= link_to product_category do %>
                  <i class="fa fa-eye" aria-hidden="true" title="Vezi"></i>
                <% end %>
              </td>
              <td>
                <%= link_to edit_product_category_path(product_category) do%>
                  <i class="fa fa-pencil-square" aria-hidden="true" title="Edit"></i>
                <% end %>
              </td>
              <td>
                <%= link_to product_category, method: :delete, data: { confirm: 'Are you sure?' } do%>
                  <i class="fa fa-trash" aria-hidden="true" title="Sterge"></i>
                <% end %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
<% end %>