<%= form_with(model: project_category) do |form| %>
  <% if project_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project_category.errors.count, "error") %> prohibited this project_category from being saved:</h2>

      <ul>
        <% project_category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xl-6 col-lg-12">
      <div class="row">
        <div class="col-lg-2">
          <%= form.label :name do %>
            <span class="label">Nume</span> 
            <span class="info">
              <i class="fa fa-info-circle info-name"></i>
              <span class="hiddenimg">
                <%= image_tag 'info/project_categories_nume.PNG' %>
              </span>
            </span>
          <% end %>
        </div>
        <div class="col-lg-10">
          <%= form.text_field :name %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-2 col-sm-3 form_btn">
          <%= link_to 'Inapoi', project_categories_path, data: { turbolinks: false } %>
        </div>
        <div class="col-lg-2 col-sm-3 form_btn">
          <%= form.submit %>
        </div>
        <% if !current_page?(new_project_category_path)  %>
          <div class="col-lg-2 col-sm-3 form_btn">
            <%= link_to 'Vezi', @project_category, data: { turbolinks: false } %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xl-6 col-lg-12"></div>
