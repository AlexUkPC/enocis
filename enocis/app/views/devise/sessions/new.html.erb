<%= render '/layouts/admin_panel' do %>
  <div class="devise">
    <h2>Autentificare</h2>
    <hr class="white">
    Conecteaza-te pentru a administra website-ul
    <hr>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group row">
        <%= f.label "Email", class: "col-sm-2 col-form-label pl-sm-0" %>
        <div class="col-sm-10">
          <%= f.email_field :login, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
        </div>
      </div>

      <div class="field form-group row">
        <%= f.label "Parola", class: "col-sm-2 col-form-label pl-sm-0" %>
        <div class="col-sm-10">
         <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
        </div>
      </div>
      <div class="row">
        <%= flash[:recaptcha_error] %>
      </div>
      <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-7"><%= recaptcha_tags theme: 'dark' %></div>
        <div class="actions col-sm-2">
          <%= f.submit "Log in", class: "form_btn" %>
        </div>
      </div>
      <div class="reset_psw row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>

    
  </div>
<% end %>