					</div>
				</div>
				<div class="col-md-6">
					<h4>Lasa-ne un mesaj</h4>
					<div id="contact-form-message"></div>
					<%= render 'contact_forms/form_footer', contact_form: @contact_form %>
				</div>
			</div>
		</div>
