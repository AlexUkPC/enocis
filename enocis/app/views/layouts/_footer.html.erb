					<h4>Date de contact</h4>
					<div class="date_de_contact">
						<span>
							<i class="fa fa-map-marker"></i>
							<%= @company.address %>
						</span>
						<span>
							<% if @company.phone!="" %>
								<a class="phone_call" href="tel:+<%= tel(@company.phone) %>">
									<i class="fa fa-phone"></i>
									<%= international_phone(@company.phone) %>
								</a>
							<% end %>
						</span>
						<span>
							<a class="email" href="mailto:<%= @company.email1 %>">
								<i class="fa fa-envelope-o"></i>
								<%= @company.email1 %>
							</a>
						</span>
						<span>
							<a class="email" href="<%= @company.facebook %>" target="_blank">
								<i class="fa fa-facebook"></i>
								Facebook
							</a>
						</span>
						<span>
							<a class="email" href="<%= @company.instagram %>" target="_blank">
								<i class="fa fa-instagram"></i>
								Instagram
							</a>
						</span>
					</div>
					<div class="link_confidentialitate">
