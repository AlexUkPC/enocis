					<strong>NE POTI SUNA ORICAND LA</strong>
				</p>
				<div class="row">
					<div class="col-md-4">
						<% if @company.phone2!="" %>
							<a class="bottom_call" href="tel:+<%= tel(@company.phone2) %>">
								<p class="bottom_call_name">
									<%= @company.phone2_name %>&nbsp
								</p>
								<%= @company.phone2 %>
							</a>
						<% end %>
					</div>
					<div class="col-md-4">.
						<% if @company.phone!="" %>
							<a class="bottom_call" href="tel:+<%= tel(@company.phone) %>">
								<p class="bottom_call_name">
									<%= @company.phone_name %>&nbsp
								</p>
								<%= @company.phone %>
							</a>
						<% end %>
					</div>
					<div class="col-md-4">
						<% if @company.phone3!="" %>
							<a class="bottom_call" href="tel:+<%= tel(@company.phone3) %>">
								<p class="bottom_call_name">
									<%= @company.phone3_name %>&nbsp
								</p>
								<%= @company.phone3 %>
							</a>
						<% end %>
