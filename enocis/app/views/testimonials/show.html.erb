<%= render '/layouts/admin_panel' do %>
  <div class="admin_testimonial_show">
    <p>
      <strong>Nume:</strong>
      <%= @testimonial.name %>
    </p>

    <p>
      <strong>Companie/Functie:</strong>
      <%= @testimonial.title %>
    </p>

    <p>
      <strong>Testimonial:</strong>
      <%= @testimonial.comment %>
    </p>

    <p>
      <strong>Aprobat:</strong>
      <%= @testimonial.approved ? "da" : "nu" %>
    </p>
    
    <p>
      <% if @testimonial.image.attached? %>
        <%= image_tag @testimonial.image.variant(resize_to_limit: [100, 100])%>
      <% end %>
    </p>
    <div class="show_btn">
      <%= link_to 'Inapoi', :back, data: { turbolinks: false } %>
    </div>
    <div class="show_btn">
      <%= link_to 'Editeaza', edit_testimonial_path(@testimonial), data: { turbolinks: false } %> 
    </div>
  </div>
<% end %>